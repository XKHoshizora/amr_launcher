<launch>
    <node name="rplidar_node" pkg="rplidar_ros" type="rplidarNode" output="screen">
        <param name="serial_port" type="string" value="/dev/rplidar"/>
        <param name="serial_baudrate" type="int" value="1000000"/>
        <param name="frame_id" type="string" value="laser"/>  <!-- Gmapping 需要 -->
        <param name="inverted" type="bool" value="false"/>
        <param name="angle_compensate" type="bool" value="false"/>
        <param name="scan_frequency" type="double" value="10.0"/>
        <param name="scan_mode" type="string" value="Standard" />
    </node>
</launch>
